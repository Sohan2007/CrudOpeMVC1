@model IQueryable<WebApplication1.Models.ProductDetail>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary"> Policy List </h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="ProDetail1" asp-action="CreateProduct" class="btn btn-primary alert-success">                
                <i class="fas fa-plus"> Add Product/Policy</i>
            </a>
        </div>
    </div>
    <br/><br/>

    @if (Model.Count() > 0)
    {
        <div class="row p-4">
           <table class="table table-bordered table-striped" style="width:100%">
               <thead>
                   <tr>
                       <th>Policy Name</th>
                       <th>Policy Price</th>
                       <th>Policy Date</th>
                       <th>Actions</th>
                   </tr>               
                </thead>
               <tbody>
                   @foreach (var item in Model)
                   {
                   <tr>
                       <td width="40%">@item.ProName </td>
                       <td width="30%">@item.Price </td>
                       <td width="30%">@item.PolicyEffectiveDate </td>
                       <td class="text-center">
                           <div class="w-75 btn-group" role="group">
                               <a asp-controller="ProDetail1" asp-action="EditPolicy" asp-route-id="@item.ID"  class="btn btn-primary mx-2 " >
                                   <i class="fas fa-edit"></i> Edit 
                               </a>
                               <a asp-controller="ProDetail1" asp-action="DeletePloicy" asp-route-id="@item.ID" class="btn btn-danger mx-2">
                                   <i class="fas fa-edit"></i> Delete
                               </a>
                           </div>
                       </td>
                   </tr>
                   }
                </tbody>
            </table>
        </div>    
    }
    else 
    {
        <a> Np product for now, add or come back later</a>
    }


</div>